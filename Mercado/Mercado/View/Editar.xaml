<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mercado.View.Editar"
             Title="{Binding descricao}">
    <ContentPage.Content>
        <StackLayout>
            
            <Label Text="Descrição: "/>
            <Entry x:Name="txt_descricao" Text="{Binding descricao}"/>

            <Label Text="Quantidade: "/>
            <Entry x:Name="txt_quantidade" Keyboard="Numeric" Text="{Binding quantidade}"/>

            <Label Text="Preço: "/>
            <Entry x:Name="txt_preco" Keyboard="Numeric" Text="{Binding preco}" />

            <Button Text="Salvar" x:Name="Salvar" Clicked="Salvar_Clicked"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>